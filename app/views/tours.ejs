<section class="tours-section">
  <h2><%= __('menu.tours') %></h2>
  <div class="tour-grid">
    <% tours.forEach(tour => { %>
      <div class="tour-card">
        <img src="<%= tour.imagen || '/images/default-tour.jpg' %>" alt="<%= tour.nombre %>">
        <div class="tour-info">
          <h3><%= tour.nombre %></h3>
          <p><%= tour.descripcion %></p>
          <p class="precio">$<%= tour.precio %> MXN</p>
          <a href="/reservar/<%= tour.id %>" class="btn-reservar">
            <%= __('Reservar') %>
          </a>
        </div>
      </div>
    <% }) %>
  </div>
</section>
  