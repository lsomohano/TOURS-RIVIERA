	<script>
        function ajustarAlturas() {
            const imgLeft = document.getElementById('imgLeft');
            const imgRight1 = document.getElementById('imgRight1');
            const imgRight2 = document.getElementById('imgRight2');
        
            // Altura visible actual de la imagen izquierda
            const alturaIzquierda = imgLeft.clientHeight;
            //alert(alturaIzquierda);
            // Asignar la mitad de esa altura a las im√°genes de la derecha
            const alturaMitad = alturaIzquierda / 2;
            

            imgLeft.style.height = (alturaIzquierda+100) + 'px';
            imgRight1.style.height = (alturaMitad+40) + 'px';
            imgRight2.style.height = (alturaMitad+40) + 'px';
        }

        window.addEventListener('load', ajustarAlturas);
        window.addEventListener('resize', ajustarAlturas);
    </script>
