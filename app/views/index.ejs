<section class="intro">
  <h2><%= __('app.title2') %></h2>
  <p>
    <%= __('app.line1') %><br>
    <%= __('app.line2') %>
  </p>
</section>

<section class="categorias">
  <div class="categoria">
    <img src="/images/parques.jpg" alt="<%= __('categorias.parques') %>">
    <div class="overlay"><%= __('categorias.parques') %></div>
  </div>
  <div class="categoria">
    <img src="/images/piramides.jpg" alt="<%= __('categorias.ruinas_mayas') %>">
    <div class="overlay"><%= __('categorias.ruinas_mayas') %></div>
  </div>
  <div class="categoria">
    <img src="/images/cenotes.jpg" alt="<%= __('categorias.cenotes') %>">
    <div class="overlay"><%= __('categorias.cenotes') %></div>
  </div>
</section>

<section class="tours-section container py-4">
  <h2 class="mb-4 text-center"><%= __('menu.tours') %></h2>
  <div class="row row-cols-1 row-cols-md-3 g-4">
    <% tours.forEach(tour => { %>
      <div class="col">
        <div class="card h-100 shadow-sm border-0">
          <img src="<%= tour.imagen_destacada || '/images/default-tour.jpg' %>" class="card-img-top" alt="<%= tour.nombre %>">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><%= tour.nombre %></h5>
            <p class="card-text text-muted small"><%= tour.descripcion.substring(0, 100) %>...</p>
            <p class="precio fw-bold text-success mt-auto">$<%= tour.precio %> MXN</p>
          </div>
          <div class="card-footer bg-white border-0 d-flex justify-content-between">
            <a href="/tours/<%= tour.id %>" class="btn btn-outline-primary btn-sm">
              <i class="bi bi-info-circle"></i> Ver detalles
            </a>
            <a href="/reservar/<%= tour.id %>" class="btn btn-success btn-sm">
              <i class="bi bi-calendar-check"></i> <%= __('Reservar') %>
            </a>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</section>