<%- include('../../partials/titles', { title: title, botones: botones }) %>
<%- include('../../partials/messages') %>
  <!-- Main content -->
  <section class="content">

  <!-- Default box -->
  <div class="card">
       
    <div class="card-body">
      <h1>Crear Reservación</h1>
<form action="/admin/reservaciones/crear" method="POST">
  <div class="mb-3">
    <label>Tour</label>
    <select name="tour_id" class="form-control" required>
      <% tours.forEach(tour => { %>
        <option value="<%= tour.id %>"><%= tour.nombre %></option>
      <% }) %>
    </select>
  </div>

  <div class="mb-3">
    <label>Nombre del Cliente</label>
    <input type="text" name="nombre_cliente" class="form-control" required>
  </div>

  <div class="mb-3">
    <label>Email</label>
    <input type="email" name="email" class="form-control" required>
  </div>

  <div class="mb-3">
    <label>Teléfono</label>
    <input type="text" name="telefono" class="form-control">
  </div>

  <div class="mb-3">
    <label>Fecha de la Reserva</label>
    <input type="date" name="fecha_reserva" class="form-control" required>
  </div>

  <div class="mb-3">
    <label>Cantidad de Personas</label>
    <input type="number" name="cantidad_personas" class="form-control" required>
  </div>

  <div class="mb-3">
    <label>Precio por persona</label>
    <input type="number" step="0.01" name="costo_unitario" class="form-control">
  </div>

  <div class="mb-3">
    <label>Punto de encuentro</label>
    <textarea name="punto_encuentro" class="form-control"></textarea>
  </div>

  <div class="mb-3">
    <label>Peticiones especiales</label>
    <textarea name="peticiones_especiales" class="form-control"></textarea>
  </div>

  <button type="submit" class="btn btn-primary">Crear y generar link</button>
</form>

    </div>
        
    <!-- /.card-footer-->
  </div>
  <!-- /.card -->
</section>
<!-- /.content -->