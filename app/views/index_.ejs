<section class="intro">
  <h2><%= __('app.title2') %></h2>
  <p>
    <%= __('app.line1') %><br>
    <%= __('app.line2') %>
  </p>
</section>

<section class="our-services container py-4">
  <h1 class="text-center fw-semibold mb-5"><%= __('our_services') %></h1>
  <div class="row">
    <!-- Tours en grupo -->
    <div class="col-md-4 mb-4" data-aos="fade-up" data-aos-delay="100">
      <div class="px-4 text-center d-flex flex-column align-items-center">
        <i class="bi bi-people display-1 mb-3 color-caribe icon-hover"></i>
        <h5 class="fw-semibold"><%= __('group_tours.title') %></h5>
        <p><%= __('group_tours.desc') %></p>
        <a href="#" class="color-caribe text-decoration-none fw-semibold">
          <%= __('learn_more') %>
        </a>
      </div>
    </div>

    <!-- Tours privados -->
    <div class="col-md-4 mb-4" data-aos="fade-up" data-aos-delay="200">
      <div class="px-4 text-center d-flex flex-column align-items-center">
        <i class="bi bi-person-check display-1 mb-3 color-caribe icon-hover"></i>
        <h5 class="fw-semibold"><%= __('private_tours.title') %></h5>
        <p><%= __('private_tours.desc') %></p>
        <a href="#" class="color-caribe text-decoration-none fw-semibold">
          <%= __('learn_more') %>
        </a>
      </div>
    </div>

    <!-- Transportación -->
    <div class="col-md-4 mb-4" data-aos="fade-up" data-aos-delay="300">
      <div class="px-4 text-center d-flex flex-column align-items-center" >
        <i class="bi bi-car-front display-1 mb-3 color-caribe icon-hover"></i>
        <h5 class="fw-semibold"><%= __('transportation.title') %></h5>
        <p><%= __('transportation.desc') %></p>
        <a href="#" class="color-caribe text-decoration-none fw-semibold">
          <%= __('learn_more') %>
        </a>
      </div>
    </div>
  </div>
</section>


<section class="tours-section container py-4">
  <h1 class="text-center fw-semibold mb-5"><%= __('menu.tours') %></h1>
  <div class="row row-cols-1 row-cols-md-3 g-4">
    <% tours.forEach(tour => { %>
      <div class="col">
        <div class="card h-100 shadow-sm border-0">
          <img src="<%= tour.imagen_destacada || '/images/default-tour.jpg' %>" class="card-img-top" alt="<%= tour.nombre %>">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><%= tour.nombre %></h5>
            <p class="card-text text-muted small"><%= tour.descripcion.substring(0, 100) %>...</p>
            <p class="precio fw-bold text-success mt-auto">$<%= tour.precio %> MXN</p>
          </div>
          <div class="card-footer bg-white border-0 d-flex justify-content-between">
            <a href="/tours/<%= tour.id %>" class="btn btn-outline-primary btn-sm">
              <i class="bi bi-info-circle"></i> Ver detalles
            </a>
            <a href="/reservar/<%= tour.id %>" class="btn btn-success btn-sm">
              <i class="bi bi-calendar-check"></i> <%= __('Reservar') %>
            </a>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</section>

<section id="payment-methods" class="payment-section">
  <h1 class="text-center fw-semibold mb-5"><%= __('payment.method.sectionTitle') %></h1>

  <div class="row">
    <!-- Método Stripe -->
    <div class="col-md-4 mb-4" data-aos="fade-up" data-aos-delay="100">
      <div class="px-4 text-center d-flex flex-column align-items-center">
        <i class="fa-solid fa-credit-card display-1 mb-3 payments icon-hover"></i>
        <h5 class="fw-semibold"><%= __('payment.method.stripe') %></h5>
      </div>
    </div>

    <!-- Método efectivo -->
    <div class="col-md-4 mb-4" data-aos="fade-up" data-aos-delay="200">
      <div class="px-4 text-center d-flex flex-column align-items-center">
        <i class="fa-solid fa-money-bill-wave display-1 mb-3 payments icon-hover"></i>
        <h5 class="fw-semibold"><%= __('payment.method.cash') %></h5>
      </div>
    </div>

    <!-- Método transferencia bancaria -->
    <div class="col-md-4 mb-4" data-aos="fade-up" data-aos-delay="300">
      <div class="px-4 text-center d-flex flex-column align-items-center">
        <i class="fa-solid fa-university display-1 mb-3 payments icon-hover"></i>
        <h5 class="fw-semibold"><%= __('payment.method.transfer') %></h5>
      </div>
    </div>
  </div>
</section>