<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title><%= tour.nombre %> - Detalles</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- Bootstrap CDN -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/tours.css" rel="stylesheet">
</head>
<body>

  <div class="container py-5">
    <div class="mb-4 text-center">
      <h1 class="display-4 fw-bold"><%= tour.nombre %></h1>
      <p class="fs-4 text-muted">Precio: $<%= Number(tour.precio).toFixed(2) %> por persona</p>
    </div>

    <% if (imagenes.length > 0) { %>
      <div id="galeria" class="carousel slide mb-5" data-bs-ride="carousel">
        <div class="carousel-inner">
          <% imagenes.forEach((img, i) => { %>
            <div class="carousel-item <%= i === 0 ? 'active' : '' %>">
              <img src="<%= img.url %>" class="d-block w-100 rounded" alt="Imagen del tour">
            </div>
          <% }) %>
        </div>
        <% if (imagenes.length > 1) { %>
          <button class="carousel-control-prev" type="button" data-bs-target="#galeria" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#galeria" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
          </button>
        <% } %>
      </div>
    <% } %>

    <div class="row gy-4">
      <div class="col-md-6">
        <% if (detalles) { %>
          <h3 class="h5">¿Por qué hacerlo?</h3>
          <p><%= detalles.por_que || 'No especificado' %></p>

          <h3 class="h5">¿Qué esperar?</h3>
          <p><%= detalles.que_esperar || 'No especificado' %></p>

          <h3 class="h5">Incluye</h3>
          <ul>
            <% if (detalles.que_incluye) { %>
              <% detalles.que_incluye.split('\n').forEach(item => { %>
                <li><%= item %></li>
              <% }) %>
            <% } else { %>
              <li>No especificado</li>
            <% } %>
          </ul>

          <h3 class="h5">Duración</h3>
          <p><%= detalles.duracion || 'No especificado' %></p>

          <h3 class="h5">Lenguaje</h3>
          <p><%= detalles.lenguaje || 'No especificado' %></p>
        <% } else { %>
          <p>No hay detalles disponibles.</p>
        <% } %>
      </div>

      <div class="col-md-6">
        <h3 class="h5">Punto de encuentro</h3>
        <p><%= punto?.descripcion || 'No especificado' %></p>
        <% if (punto?.mapa_url) { %>
          <iframe src="<%= punto.mapa_url %>" width="100%" height="250" class="rounded border" style="border:0;" allowfullscreen></iframe>
        <% } %>

        <h3 class="h5 mt-4">Itinerario</h3>
        <% if (itinerario.length > 0) { %>
          <ol>
            <% itinerario.forEach(paso => { %>
              <li><strong><%= paso.titulo %></strong>: <%= paso.descripcion %></li>
            <% }) %>
          </ol>
        <% } else { %>
          <p>No hay itinerario disponible.</p>
        <% } %>
      </div>
    </div>

    <div class="row mt-5">
      <div class="col-md-4">
        <h3 class="h5">Recomendaciones antes</h3>
        <ul>
          <% recomendaciones.filter(r => r.momento === 'antes').forEach(r => { %>
            <li><%= r.descripcion %></li>
          <% }) %>
        </ul>
      </div>
      <div class="col-md-4">
        <h3 class="h5">Durante</h3>
        <ul>
          <% recomendaciones.filter(r => r.momento === 'durante').forEach(r => { %>
            <li><%= r.descripcion %></li>
          <% }) %>
        </ul>
      </div>
      <div class="col-md-4">
        <h3 class="h5">Después</h3>
        <ul>
          <% recomendaciones.filter(r => r.momento === 'despues').forEach(r => { %>
            <li><%= r.descripcion %></li>
          <% }) %>
        </ul>
      </div>
    </div>

    <div class="mt-4">
      <h3 class="h5">Políticas de cancelación</h3>
      <p><%= politicas?.descripcion || 'No especificado' %></p>
    </div>

    <div class="text-center mt-5">
      <a href="/reservar/<%= tour.id %>" class="btn btn-lg btn-success">Reservar ahora</a>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>